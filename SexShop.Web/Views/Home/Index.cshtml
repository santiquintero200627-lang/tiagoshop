@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "Catálogo";
}

@if (User.IsInRole("Admin"))
{
    <div class="container-fluid mb-5">
        <h2 class="text-accent mb-4">Acceso Rápido Administrativo</h2>
        <div class="card bg-white border-accent shadow">
            <div class="card-body py-4">
                <div class="row text-center">
                    <div class="col-md-3">
                        <a asp-controller="Admin" asp-action="CreateProduct" class="btn btn-primary w-100 mb-2 py-3">
                            <i class="fas fa-plus-circle d-block mb-2 fa-2x"></i>
                            Nuevo Producto
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Admin" asp-action="Products" class="btn btn-outline-success w-100 mb-2 py-3">
                            <i class="fas fa-boxes d-block mb-2 fa-2x"></i>
                            Gestionar Inventario
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-success w-100 mb-2 py-3">
                            <i class="fas fa-users-cog d-block mb-2 fa-2x"></i>
                            Gestionar Usuarios
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-success w-100 mb-2 py-3">
                            <i class="fas fa-chart-line d-block mb-2 fa-2x"></i>
                            Ver Estadísticas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-accent">SEXSHOP EXCLUSIVE</h1>
        <p class="lead text-muted">Descubre nuestra colección premium.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 250px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-accent">@item.Name</h5>
                            <p class="card-text text-muted">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="h5 mb-0">$@item.Price</span>
                                @if (item.Stock > 0)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-success add-to-cart-btn" data-product-id="@item.Id">
                                        <i class="fas fa-cart-plus me-1"></i> Agregar
                                    </button>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Agotado</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">
                <p>No hay productos disponibles por el momento.</p>
            </div>
        }
    </div>
}
