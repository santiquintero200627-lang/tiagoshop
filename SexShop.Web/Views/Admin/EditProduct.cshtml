@model SexShop.Application.DTOs.Products.UpdateProductDto
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-white shadow">
                <div class="card-header border-bottom border-light">
                    <h4 class="mb-0"><i class="fas fa-edit me-2 text-success"></i>Editar Producto</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditProduct" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-muted small uppercase fw-bold">Nombre del Producto</label>
                            <input asp-for="Name" class="form-control border-accent" placeholder="Ej: Vibrador Elite" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label text-muted small uppercase fw-bold">Descripci√≥n</label>
                            <textarea asp-for="Description" class="form-control border-accent" rows="3"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label text-muted small uppercase fw-bold">Precio ($)</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control border-accent" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label text-muted small uppercase fw-bold">Stock</label>
                                <input asp-for="Stock" type="number" class="form-control border-accent" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label text-muted small uppercase fw-bold">URL de Imagen</label>
                            <input asp-for="ImageUrl" class="form-control border-accent" placeholder="https://..." />
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                <label class="form-check-label text-dark fw-bold" asp-for="IsActive">Producto Activo</label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary d-flex align-items-center justify-content-center">
                                <i class="fas fa-save me-2"></i> Guardar Cambios
                            </button>
                            <a asp-action="Products" class="btn btn-outline-success">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
