@model IEnumerable<SexShop.Application.DTOs.Auth.UserDto>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-accent"><i class="fas fa-users-cog me-2"></i>Gestión de Usuarios</h2>
        <a asp-action="CreateUser" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Nuevo Usuario
        </a>
    </div>

    <div class="card bg-white shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Nombre Completo</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr class="text-dark">
                                <td class="ps-4">@item.FirstName @item.LastName</td>
                                <td>@item.Email</td>
                                <td>
                                    @foreach (var role in item.Roles)
                                    {
                                        <span class="badge border border-success text-success me-1">@role</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!item.Roles.Contains("Admin"))
                                    {
                                        <form asp-action="DeleteUser" method="post" onsubmit="return confirm('¿Estás seguro de eliminar este usuario?');" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-user-minus"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-outline-success"><i class="fas fa-arrow-left me-2"></i>Volver al Dashboard</a>
    </div>
</div>
