@model IEnumerable<SexShop.Application.DTOs.Products.ProductDto>
@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-accent"><i class="fas fa-boxes me-2"></i>Gestión de Productos</h2>
        <a asp-action="CreateProduct" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nuevo Producto
        </a>
    </div>

    <div class="card bg-white shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr class="table-light">
                        <th class="ps-4">Imagen</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <img src="@item.ImageUrl" alt="@item.Name" style="width: 40px; height: 40px; object-fit: cover;" class="rounded">
                                </td>
                                <td>@item.Name</td>
                                <td>$@item.Price</td>
                                <td>@item.Stock</td>
                                <td>
                                    <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                        @(item.IsActive ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteProduct" method="post" onsubmit="return confirm('¿Estás seguro de eliminar este producto?');" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger ms-1">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-outline-success"><i class="fas fa-arrow-left me-2"></i>Volver al Dashboard</a>
    </div>
</div>
