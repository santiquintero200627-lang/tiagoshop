@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <h2 class="text-accent mb-4">Dashboard Administrativo</h2>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card bg-white shadow">
                <div class="card-body">
                    <h5 class="card-title text-muted">Ventas Totales</h5>
                    <h2 class="display-6 fw-bold">$ 12,500.00</h2>
                    <p class="card-text text-success"><i class="fas fa-arrow-up"></i> 15% mes actual</p>
                </div>
            </div>
        </div>
         <div class="col-md-4">
            <div class="card bg-white shadow">
                <div class="card-body">
                    <h5 class="card-title text-muted">Usuarios Registrados</h5>
                    <h2 class="display-6 fw-bold">1,250</h2>
                    <p class="card-text text-primary"><i class="fas fa-users"></i> +50 nuevos</p>
                </div>
            </div>
        </div>
         <div class="col-md-4">
            <div class="card bg-white shadow">
                <div class="card-body">
                    <h5 class="card-title text-muted">Productos Activos</h5>
                    <h2 class="display-6 fw-bold">45</h2>
                    <p class="card-text text-warning"><i class="fas fa-box"></i> Inventario OK</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card bg-white">
        <div class="card-header border-bottom border-secondary">
            <h5 class="mb-0">Acciones RÃ¡pidas</h5>
        </div>
        <div class="card-body">
            <a asp-action="CreateProduct" class="btn btn-primary me-2"><i class="fas fa-plus me-2"></i>Nuevo Producto</a>
            <a asp-action="Products" class="btn btn-outline-success me-2"><i class="fas fa-boxes me-2"></i>Gestionar Productos</a>
            <a asp-action="Users" class="btn btn-outline-success me-2"><i class="fas fa-users-cog me-2"></i>Gestionar Usuarios</a>
            <a href="#" class="btn btn-outline-success"><i class="fas fa-list-alt me-2"></i>Ver Pedidos</a>
        </div>
    </div>
</div>
