@model RegisterDto
@{
    ViewData["Title"] = "Registro";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card bg-white shadow-lg">
            <div class="card-header border-bottom border-light text-center">
                <h3 class="text-dark"><i class="fas fa-user-plus me-2 text-success"></i>Registro</h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label text-dark">Nombre</label>
                            <input asp-for="FirstName" class="form-control border-accent" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label text-dark">Apellido</label>
                            <input asp-for="LastName" class="form-control border-accent" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
 
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label text-dark">Email</label>
                        <input asp-for="Email" class="form-control border-accent" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
 
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label text-dark">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control border-accent" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
 
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label text-dark">Confirmar Contraseña</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control border-accent" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
 
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Registrarse</button>
                    </div>
                </form>
            </div>
             <div class="card-footer bg-light text-center">
                <small class="text-muted">¿Ya tienes cuenta? <a asp-action="Login" class="text-accent fw-bold text-decoration-none">Inicia Sesión</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
