@model IEnumerable<SexShop.Web.Models.CartItemViewModel>
@{
    ViewData["Title"] = "Mi Carrito";
}

<div class="container mt-5">
    <h2 class="text-accent mb-4"><i class="fas fa-shopping-cart me-2"></i>Mi Carrito (Seleccionados)</h2>

    @if (Model != null && Model.Any())
    {
        <div class="card bg-white shadow">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Producto</th>
                            <th>Precio</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Total</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 50px; height: 50px; object-fit: cover;" class="rounded me-3 border">
                                        <span class="text-dark">@item.ProductName</span>
                                    </div>
                                </td>
                                <td class="text-dark">$@item.Price</td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <button class="btn btn-sm btn-outline-success change-quantity" data-product-id="@item.ProductId" data-delta="-1">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <span class="mx-3 fw-bold item-quantity" data-product-id="@item.ProductId">@item.Quantity</span>
                                        <button class="btn btn-sm btn-outline-success change-quantity" data-product-id="@item.ProductId" data-delta="1">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </td>
                                <td class="text-end fw-bold text-success">$<span class="item-total" data-product-id="@item.ProductId">@item.Total.ToString("F2")</span></td>
                                <td class="text-center">
                                    <form asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end fw-bold ps-4">TOTAL:</td>
                            <td class="text-end fw-bold text-success h4">$<span id="cart-total">@Model.Sum(x => x.Total).ToString("F2")</span></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="card-footer bg-light border-top d-flex justify-content-between align-items-center py-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">
                    <i class="fas fa-arrow-left me-2"></i>Seguir Comprando
                </a>
                <button class="btn btn-primary btn-lg">
                    Completar Pedido <i class="fas fa-check-circle ms-2"></i>
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-basket fa-4x text-muted mb-3"></i>
            <h3>Tu carrito está vacío</h3>
            <p class="text-muted">¡Anímate a comprar algo especial!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Ver Catálogo</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.change-quantity').click(function () {
                var btn = $(this);
                var productId = btn.data('product-id');
                var delta = btn.data('delta');
                
                btn.prop('disabled', true);

                $.post('/Cart/UpdateQuantity', { productId: productId, delta: delta }, function (data) {
                    if (data.success) {
                        if (data.itemRemoved) {
                            btn.closest('tr').fadeOut(300, function() {
                                $(this).remove();
                                if ($('tbody tr').length === 0) {
                                    location.reload(); // Reload to show empty cart message
                                }
                            });
                        } else {
                            $('.item-quantity[data-product-id="' + productId + '"]').text(data.itemQuantity);
                            $('.item-total[data-product-id="' + productId + '"]').text(data.itemTotal);
                        }
                        
                        $('#cart-total').text(data.cartTotal);
                        
                        // Update navbar counter
                        if (typeof updateCartBadge === 'function') {
                            updateCartBadge(data.totalItems);
                        } else {
                            // Fallback if global function is not accessible
                            var badge = $('#cart-counter');
                            if (data.totalItems > 0) {
                                badge.text(data.totalItems).fadeIn();
                            } else {
                                badge.hide();
                            }
                        }
                    }
                    btn.prop('disabled', false);
                });
            });
        });
    </script>
}
